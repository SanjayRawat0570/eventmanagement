datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  fullName  String
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())
  events    Event[]      @relation("UserEvents") // events created by event_owner
  rsvps     RSVP[]
}

model Event {
  id          String   @id @default(uuid())
  title       String
  description String?
  date        DateTime
  venue       Venue?   @relation(fields: [venueId], references: [id])
  venueId     String?
  createdBy   User     @relation("UserEvents", fields: [createdById], references: [id])
  createdById String
  createdAt   DateTime @default(now())
  rsvps       RSVP[]
}

model Venue {
  id        String   @id @default(uuid())
  name      String
  address   String
  capacity  Int?
  events    Event[]
}

model RSVP {
  id        String   @id @default(uuid())
  event     Event    @relation(fields: [eventId], references: [id])
  eventId   String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  status    RSVPStatus @default(PENDING)
  createdAt DateTime @default(now())

  @@unique([eventId, userId]) // âœ… prevents duplicate RSVPs
}


enum RSVPStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

enum Role {
  admin
  staff
  event_owner
}


